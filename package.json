{
	"name": "polvo",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"docker-up": "docker-compose && docker-compose up",
		"docker-dev-up": "docker compose up -d && docker exec -it development bash",
		"dev:net:reset": "docker network rm shared && docker network create shared",
		"dev:net:up": "docker network create shared",
		"dev:up": "docker compose -f docker-compose.dev.yml up -d --build",
		"dev:reset": "docker compose -f docker-compose.dev.yml down --volumes --remove-orphans && docker-compose -f polvo-docker-db/docker-compose.yml down --volumes --remove-orphans && docker-compose -f polvo-docker-db/docker-compose.yml up -d && docker compose -f docker-compose.dev.yml up -d --build",
		"prod:up": "docker compose -f docker-compose.yml up --build",
		"prod:reset": "docker compose -f docker-compose.yml down --volumes --remove-orphans && docker compose -f docker-compose.yml up --build"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/bcrypt": "^5.0.2",
		"@types/pg": "^8.15.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@types/cookie": "^0.6.0",
		"bcrypt": "^6.0.0",
		"dotenv": "^16.5.0",
		"jose": "^6.0.11",
		"pg": "^8.16.0"
	}
}
